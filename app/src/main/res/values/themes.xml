<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SKT_skinData" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="AppTheme.Picker" parent="android:Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:colorControlNormal">@color/opacity_0</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.EditText" parent="android:Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:colorControlActivated">@color/white</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorHighlight">@color/blue</item>
    </style>

</resources>